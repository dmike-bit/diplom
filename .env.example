# Настройки для production окружения
# Скопируйте этот файл в .env и заполните своими данными

# ================================
# ОСНОВНЫЕ НАСТРОЙКИ DJANGO
# ================================

# ВАЖНО: Измените этот ключ на случайный для production!
SECRET_KEY=ваш-случайный-секретный-ключ-64-символа-длиной-уникальный-для-вашего-сайта

# ВАЖНО: Укажите ваш домен вместо example.com
ALLOWED_HOSTS=вашдомен.ru,www.вашдомен.ru,IP_адрес_сервера

# Настройка отладки (ВСЕГДА False в production!)
DEBUG=False

# ================================
# БАЗА ДАННЫХ (PostgreSQL)
# ================================

DB_NAME=myblog
DB_USER=postgres
DB_PASSWORD=сложный_пароль_для_базы_данных_минимум_16_символов
DB_HOST=db
DB_PORT=5432

# ================================
# REDIS НАСТРОЙКИ
# ================================

# Пароль для Redis (измените!)
REDIS_PASSWORD=redis123
REDIS_URL=redis://:redis123@redis:6379/0
CELERY_BROKER_URL=redis://:redis123@redis:6379/1
CELERY_RESULT_BACKEND=redis://:redis123@redis:6379/2

# ================================
# EMAIL НАСТРОЙКИ (ОБЯЗАТЕЛЬНО!)
# ================================

# Настройки для Gmail (рекомендуется)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=ваш_email@gmail.com
EMAIL_HOST_PASSWORD=пароль_приложения_gmail_16_символов
DEFAULT_FROM_EMAIL=ваш_email@gmail.com

# Альтернатива: Yandex Mail
# EMAIL_HOST=smtp.yandex.ru
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=ваш_email@yandex.ru
# EMAIL_HOST_PASSWORD=пароль_приложения_yandex

# ================================
# SSL И БЕЗОПАСНОСТЬ
# ================================

# Если используете Cloudflare
CLOUDFLARE=True

# Если используете собственные SSL сертификаты
SSL_CERT_PATH=/etc/nginx/ssl/вашдомен.crt
SSL_KEY_PATH=/etc/nginx/ssl/вашдомен.key

# ================================
# ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ
# ================================

# Часовой пояс
TIME_ZONE=Europe/Moscow
LANGUAGE_CODE=ru-ru

# Логирование
DJANGO_LOG_LEVEL=INFO

# Кэш (локальный для разработки)
USE_LOCAL_CACHE=False

# ================================
# ИНСТРУКЦИЯ ПО НАСТРОЙКЕ
# ================================
# 1. Скопируйте этот файл: cp .env.example .env
# 2. Отредактируйте .env файл с вашими данными
# 3. Замените все "ваш_*" значения на ваши реальные данные
# 4. НЕ используйте эти настройки в production без изменений!
# 5. Обязательно измените SECRET_KEY на уникальный!
# 6. Укажите ваш реальный домен в ALLOWED_HOSTS!