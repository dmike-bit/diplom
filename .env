# ОСНОВНЫЕ НАСТРОЙКИ DJANGO
SECRET_KEY=django-insecure-prod-key-change-this-immediately-to-secure-random-key-minimum-50-chars
ALLOWED_HOSTS=82.202.141.206,localhost,127.0.0.1,web,db,redis,nginx
DEBUG=False

